Options -Indexes

ErrorDocument 403 /MRFSistem/Vista/Error403.php
ErrorDocument 404 /MRFSistem/Vista/Error403.php
ErrorDocument 500 /MRFSistem/Vista/Error403.php

<IfModule mod_rewrite.c>
# Activar RewriteEngine
#Options +FollowSymLinks
RewriteEngine on
RewriteBase /MRFSistem/
RewriteCond %{SCRIPT_FILENAME} !-d
RewriteCond %{SCRIPT_FILENAME} !-f
 
RewriteRule ^(.*)$ $1.php

RewriteCond %{REQUEST_URI} ^/Vista/
RewriteRule /Vista/(.+) /$1 [R=301,L]

</IfModule>